<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory.styles.css" asp-append-version="true" />
    <!-- Option 1: Include in HTML -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <style>
        :root {
            --header-height: 2rem;
            --nav-width: 68px;
            --first-color: #333;
            --first-color-light: #333;
            --white-color: #F7F6FB;
            --z-fixed: 100;
        }

    </style>

</head>
<body>
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="">
            <a href="#" class="">
                <i class='bx bxs-user nav_icon'></i>
                <span class="nav_name">Acount</span>
            </a>

        </div>
    </header>
    <div class="con">
    <div class="l-navbar position-fixed vh-100 " id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo">
                    <span class="nav_logo-name">
                        Inventory
                    </span>
                </a>
                <div class="nav_list">
                    <a asp-action="Index" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Stat</span>
                    </a>
                    <a asp-action="Index" class="nav_link">
                        <i class='bx bx-user nav_icon'></i>
                        <span class="nav_name">Users</span>
                    </a>
                    <a asp-action="Index" class="nav_link">
                        <i class='bx bx-message-square-detail nav_icon'></i>
                        <span class="nav_name">Messages</span>
                    </a>
                    <a asp-action="Index" class="nav_link">
                        <i class='bx bx-bookmark nav_icon'></i>
                        <span class="nav_name">Bookmark</span>
                    </a>
                    <a asp-action="Index" class="nav_link">
                        <i class='bx bx-folder nav_icon'></i>
                        <span class="nav_name">Files</span>
                    </a>
                    <a asp-action="Index" class="nav_link">
                        <i class='bx bx-bar-chart-alt-2 nav_icon'></i>
                        <span class="nav_name">Stats</span>
                    </a>
                </div>
                </div> <a asp-action="Index" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>
        </nav>
    </div>
    </div>
    <!--Container Main start-->
    @* <div class="height-100 bg-light"> *@
        <main role="main" class="">
            @RenderBody()
        </main>
    @* </div> *@
    <!--Container Main end-->
        @* <main role="main"">
            @RenderBody()
        </main> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        if (window.history && window.history.pushState) {
            window.history.pushState('', null, './');
            window.onpopstate = function () {
                window.location.href = '`~View/Dashboard/Index';
            };
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
