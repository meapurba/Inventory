
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory.styles.css" asp-append-version="true" />
    <!-- Option 1: Include in HTML -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
<div class="container min-vh-100  d-flex justify-content-center align-items-center">
<div class="card text-center " style="width: 400px;">
    <div class="card-header h5 text-white bg-secondary">Password Reset</div>
    <div class="card-body px-5">
        <p class="card-text py-1">
            Enter your email address and we'll send you an email with instructions to reset your password.
        </p>
        <div data-mdb-input-init class="form-outline">
            <input type="email" id="typeEmail" class="form-control my-3" placeholder="Enter Email"/>
        </div>
        <a href="#" data-mdb-ripple-init class="btn btn btn-secondary w-100">Reset password</a>
         <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-secondary" asp-action="Signin" style="text-decoration:none;">Sign in</a>
                <a class="btn btn-outline-secondary" asp-action="Signup" style="text-decoration:none;">Sign up</a>
        </div>
    </div>
</div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
