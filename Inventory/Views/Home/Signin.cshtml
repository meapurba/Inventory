@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory.styles.css" asp-append-version="true" />
    <!-- Option 1: Include in HTML -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
<div class=" min-vh-100  d-flex justify-content-center align-items-center">
    
    <form class="form-group shadow p-3 bg-white rounded  p-lg-5 " style="width:500px;">
        <h2 class="m-3 mb-5 " style="text-align:center;">Sign in</h2>
    <!-- Email input -->
    <div data-mdb-input-init class="form-outline mb-4 w-100">
        <input type="email" id="form2Example1" class="form-control" placeholder="Email address"/>
        @* <label class="form-label" for="form2Example1">Email address</label> *@
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4 w-100">
        <input type="password" id="form2Example2" class="form-control" placeholder="Password"/>
        @* <label class="form-label" for="form2Example2">Password</label> *@
    </div>

    <!-- 2 column grid layout for inline styling -->
    

      <div class="col mb-4">
            <!-- Simple link -->
            <a asp-action="Passwordreset"  style="text-decoration:none;">Forgot password?</a>
      </div>
    

    <!-- Submit button -->
        <a asp-controller="Dashboard" asp-action="Index" type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-success btn-block mb-4">Sign in</a>

    <!-- Register buttons -->
    <div class="text-center">
            <p>Not a member? <a asp-action="Signup" " style="text-decoration:none;">Register</a></p>
        
        </button>
    </div>
</form>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>